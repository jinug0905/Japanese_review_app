<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pandora.japanese_review">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Japanese_review">

        <activity android:name=".KatakanaReview"
            android:label="Katakana Review"
            android:theme="@style/Theme.MaterialComponents.Light.Dialog"></activity>

        <activity android:name=".HiraganaReview"
            android:label="Hiragana Review"
            android:theme="@style/Theme.MaterialComponents.Light.Dialog"></activity>
        
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>